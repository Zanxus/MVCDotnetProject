@model MVCDotnetProject.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<h3>@Model.Name</h3>
<h4>Membership Type: @Model.MembershipType.Name</h4>
@if (!Model.Birthdate.Equals(null)){
    <h4>Birthdate: @Model.Birthdate.Value.ToShortDateString()</h4>
}
@model MVCDotnetProject.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<h3>@Model.Name</h3>
<h4>Genre: @Model.Genre.Id</h4>
<h4>Date Added: @Model.DateAdded.ToLongDateString()</h4>
<h4>Release Date: @Model.ReleaseDate.ToLongDateString()</h4>
<h4>Stock: @Model.Stock</h4>